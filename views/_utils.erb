<div class="utils">
  <% unless @meta.layers.first.nil? %>
    <% @layers = @meta.layers.map{|node|/(.*)\:(.*)/.match(node.text)[2]} %>
    <% workspace = /(.*)\:/.match(@meta.layers.first)[1] %>
    <% list = @layers.join(',').chomp %>
    <span class="kml-link">
      <%= link_to(kml_url2(workspace,list), 'Google Earth') %>
    </span>
  <% end %>

  <% unless @meta.catalog_link.nil? %>
    <span class="catalog-link">
    <%= link_to(cat_url(@meta.catalog_link.content), 'Virgo') %>
  </span>
<% end %>
</div>
