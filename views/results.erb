<div class="content">
  <h1>Results</h1>

  <%= erb :_search_form %>

  <% if @search.hits != 0 %>
    <p>Search for <strong><%#= unescape(@search.search.query) %></strong>
  returned <span id="hits"><%= @search.hits %></span> results.</p>

<% else %>
    <p>No results found.</p>
<% end %>
  <hr/>
  <div id="results">
    <% @doc.xpath('.//metadata')[(@search.start - 1)..(@search.end - 1)].each do |item| %> 
      <% @item_id = item.xpath('.//id').first.content %>
    <% @meta = get_item(@meta_url + @item_id) %>
    <% @meta.extend Geoportal::Result %>
    <div class="result">
      <h2>
        <a href="/items/<%= @item_id %>"><%= @meta.title %></a>
      </h2>
      <p>Keywords:
      <% @meta.description.each do |kw| %>
        <span class="keyword"><%= kw.text.strip %></span>
    <% end %>
      </p>

      <% unless @meta.map_link.nil? %>
        <%= erb :_utils %>
    <% end %>
    </div>
  <% end %>

    <div id="page-nav">
      <a href="/items?" id="more-link">View More results</a>
    </div>
  </div>
</div>
